<mvc:View 
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified" >


    <Page id="page" title="{i18n>title}">
        <VBox>
         	<Table id="productsTable" items="{modProducts>/}">
             	<columns>
                	<Column>
                       	<Text text="Product Name" />
                    </Column>

                   	<Column>
                    	<Text text="Quantity per unit" />
                   	</Column>

					<Column>
                       	<Text text="Unit price" />
                    </Column>

                   	<Column>
                     	<Text text="Shipping from" />
                  	</Column>

                   	<Column>
                    	<Text text="City" />
                   	</Column>

                    <Column>
                    	<Text text="Add/Remove from cart" />
                        <Button  type="Accept"  icon="sap-icon://cart-4" iconFirst="true" width="100%" enabled="true" visible="true" press=""/>
                        <Button  type="Reject"  icon="sap-icon://cart-2" iconFirst="true" width="auto" enabled="false" visible="true" press=""/>

                   	</Column>

               		</columns>
               			<items>
                    		<ColumnListItem>
                      			<cells>
                           			<ObjectIdentifier title="{modProducts>ProductName}" />
                                        <Button  type="Default"  icon="sap-icon://cart-4" iconFirst="true" width="auto" enabled="true" visible="true" press=""/>
                                        <Button  type="Default"  icon="sap-icon://cart-2" iconFirst="true" width="auto" enabled="true" visible="true" press=""/>
                            			<Text text="{modProducts>UnitPrice}" />
                           				<Text text="{modProducts>UnitsInStock}" />
                           				<StepInput id="stepInput" value="{modProducts>Quantity}" min="0" max="{modProduct>UnitsInStock}" change=".calculateTotalPrice" />
                           				<Text text="{prezzoTotale}" />
                       			</cells>
                    		</ColumnListItem>
                		</items>
          	</Table>
       	</VBox>
    </Page>


</mvc:View>
